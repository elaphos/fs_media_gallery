<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>

			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.show</numIndex>
										<numIndex index="1">MediaAlbum->show</numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.list</numIndex>
										<numIndex index="1">MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.showAlbum</numIndex>
										<numIndex index="1">MediaAlbum->showAlbumByConfig</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.randomImage</numIndex>
										<numIndex index="1">MediaAlbum->randomImage</numIndex>
									</numIndex>
								</items>
								<default>MediaAlbum->show</default>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.mediagalleries>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_mediaalbums</label>
							<displayCond>FIELD:switchableControllerActions:=:MediaAlbum->show,MediaAlbum->randomImage</displayCond>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parentalbum</parentField>
									<appearance>
										<showHeader>TRUE</showHeader>
										<width>650</width>
									</appearance>
								</treeConfig>
								<internal_type>db</internal_type>
								<size>20</size>
								<maxitems>1000</maxitems>
								<minitems>0</minitems>
								<!-- itemsProcFunc>MiniFranske\FsMediaGallery\Controller\MediaAlbumController->flexformOptions</itemsProcFunc -->
								<foreign_table>sys_file_collection</foreign_table>
								<foreign_table_where>AND (sys_file_collection.sys_language_uid = 0 OR sys_file_collection.l10n_parent = 0) ORDER BY sys_file_collection.sorting ASC, sys_file_collection.crdate DESC</foreign_table_where>
							</config>
						</TCEforms>
					</settings.mediagalleries>
					<settings.useAlbumFilterAsExclude>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_useAlbumFilterAsExclude</label>
							<displayCond>FIELD:switchableControllerActions:=:MediaAlbum->show,MediaAlbum->randomImage</displayCond>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_useAlbumFilterAsExclude.0</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_useAlbumFilterAsExclude.1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
								</items>
								<default></default>
								<size>1</size>
							</config>
						</TCEforms>
					</settings.useAlbumFilterAsExclude>
					<!-- single album selection -->
					<settings.mediaAlbum>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_mediaalbum</label>
							<displayCond>FIELD:switchableControllerActions:=:MediaAlbum->showAlbumByConfig</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>sys_file_collection</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.mediaAlbum>
					<!-- startingpoint -->
					<settings.startingpoint>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.xlf:LGL.startingpoint</label>
							<displayCond>FIELD:switchableControllerActions:=:MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage</displayCond>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.startingpoint>
					<!-- recursive -->
					<settings.recursive>
						<TCEforms>
							<label>LLL:EXT:lang/locallang_general.xlf:LGL.recursive</label>
							<displayCond>FIELD:switchableControllerActions:=:MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage</displayCond>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:flexforms_general.recursive.I.inherit</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.0</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.2</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.3</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.4</numIndex>
										<numIndex index="1">4</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">LLL:EXT:cms/locallang_ttc.xlf:recursive.I.5</numIndex>
										<numIndex index="1">250</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.recursive>
				</el>
			</ROOT>
		</general>
		<list>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_list</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.list.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_list_thumb_limit</label>
							<config>
								<type>input</type>
								<eval>null,num</eval>
								<size>4</size>
								<max>3</max>
							</config>
						</TCEforms>
					</settings.list.itemsPerPage>
					<settings.list.thumb.width>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_list_thumb_width</label>
							<config>
								<type>input</type>
								<eval>trim</eval>
								<size>4</size>
							</config>
						</TCEforms>
					</settings.list.thumb.width>
					<settings.list.thumb.height>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_list_thumb_height</label>
							<config>
								<type>input</type>
								<eval>trim</eval>
								<size>4</size>
							</config>
						</TCEforms>
					</settings.list.thumb.height>
				</el>
			</ROOT>
		</list>
		<album>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_album</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:MediaAlbum->show,MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage,MediaAlbum->showAlbumByConfig</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.album.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_limit</label>
							<config>
								<type>input</type>
								<eval>null,num</eval>
								<size>4</size>
								<max>3</max>
							</config>
						</TCEforms>
					</settings.album.itemsPerPage>
					<settings.album.thumb.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>120</default>
							</config>
						</TCEforms>
					</settings.album.thumb.maxWidth>
					<settings.album.thumb.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>100</default>
							</config>
						</TCEforms>
					</settings.album.thumb.maxHeight>
					<settings.album.enableLightbox>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_detailsInLightbox</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.album.enableLightbox>
				</el>
			</ROOT>
		</album>
		<detail>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_detail</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:MediaAlbum->show,MediaAlbum->list;MediaAlbum->showAlbum;MediaAlbum->showImage,MediaAlbum->showAlbumByConfig</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.detail.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_detail_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>500</default>
							</config>
						</TCEforms>
					</settings.detail.maxWidth>
					<settings.detail.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_detail_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>800</default>
							</config>
						</TCEforms>
					</settings.detail.maxHeight>
				</el>
			</ROOT>
		</detail>
		<random>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_random</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:MediaAlbum->randomImage</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.galleryPid>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_gallery_page</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.galleryPid>
					<settings.random.thumb.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_random_thumb_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>120</default>
							</config>
						</TCEforms>
					</settings.random.thumb.maxWidth>
					<settings.random.thumb.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_random_thumb_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>100</default>
							</config>
						</TCEforms>
					</settings.random.thumb.maxHeight>
				</el>
			</ROOT>
		</random>
	</sheets>
</T3DataStructure>