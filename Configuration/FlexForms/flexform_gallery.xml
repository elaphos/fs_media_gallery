<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<general>

			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_general</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<switchableControllerActions>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items type="array">
									<numIndex index="0">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.0</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_display.1</numIndex>
										<numIndex index="1">MediaAlbum->randomImage</numIndex>
									</numIndex>
								</items>
								<default></default>
								<size>1</size>
							</config>
						</TCEforms>
					</switchableControllerActions>
					<settings.mediagalleries>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_mediaalbums</label>
							<config>
								<type>select</type>
								<renderMode>tree</renderMode>
								<treeConfig>
									<parentField>parentalbum</parentField>
									<appearance>
										<showHeader>TRUE</showHeader>
										<width>650</width>
									</appearance>
								</treeConfig>
								<internal_type>db</internal_type>
								<size>20</size>
								<maxitems>1000</maxitems>
								<minitems>0</minitems>
								<!-- itemsProcFunc>MiniFranske\FsMediaGallery\Controller\MediaAlbumController->flexformOptions</itemsProcFunc -->
								<foreign_table>sys_file_collection</foreign_table>
								<foreign_table_where>AND (sys_file_collection.sys_language_uid = 0 OR sys_file_collection.l10n_parent = 0) ORDER BY sys_file_collection.sorting ASC, sys_file_collection.crdate DESC</foreign_table_where>
							</config>
						</TCEforms>
					</settings.mediagalleries>
				</el>
			</ROOT>
		</general>
		<album>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_album</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.album.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_limit</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>200</max>
								</range>
								<size>4</size>
								<default>12</default>
							</config>
						</TCEforms>
					</settings.album.itemsPerPage>
					<settings.album.thumb.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>120</default>
							</config>
						</TCEforms>
					</settings.album.thumb.maxWidth>
					<settings.album.thumb.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_album_thumb_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>100</default>
							</config>
						</TCEforms>
					</settings.album.thumb.maxHeight>
				</el>
			</ROOT>
		</album>

		<image>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_image</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.image.itemsPerPage>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_image_thumb_limit</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>200</max>
								</range>
								<size>4</size>
								<default>32</default>
							</config>
						</TCEforms>
					</settings.image.itemsPerPage>
					<settings.image.thumb.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_image_thumb_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>120</default>
							</config>
						</TCEforms>
					</settings.image.thumb.maxWidth>
					<settings.image.thumb.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_image_thumb_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>100</default>
							</config>
						</TCEforms>
					</settings.image.thumb.maxHeight>
					<settings.enableLightbox>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_detailsInLightbox</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.enableLightbox>
					<settings.image.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_image_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>500</default>
							</config>
						</TCEforms>
					</settings.image.maxWidth>
					<settings.image.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_image_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>1</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>800</default>
							</config>
						</TCEforms>
					</settings.image.maxHeight>
				</el>
			</ROOT>
		</image>

		<random>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_tab_random</sheetTitle>
					<displayCond>FIELD:general.switchableControllerActions:=:MediaAlbum->randomImage</displayCond>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.galleryPid>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_gallery_page</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
								<show_thumbs>1</show_thumbs>
								<wizards>
									<suggest>
										<type>suggest</type>
									</suggest>
								</wizards>
							</config>
						</TCEforms>
					</settings.galleryPid>
					<settings.random.thumb.maxWidth>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_random_thumb_maxWidth</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>120</default>
							</config>
						</TCEforms>
					</settings.random.thumb.maxWidth>
					<settings.random.thumb.maxHeight>
						<TCEforms>
							<label>LLL:EXT:fs_media_gallery/Resources/Private/Language/locallang_be.xlf:mediagallery_plugin_random_thumb_maxHeight</label>
							<config>
								<type>input</type>
								<eval>int</eval>
								<range>
									<min>30</min>
									<max>1000</max>
								</range>
								<size>4</size>
								<default>100</default>
							</config>
						</TCEforms>
					</settings.random.thumb.maxHeight>
				</el>
			</ROOT>
		</random>
	</sheets>
</T3DataStructure>